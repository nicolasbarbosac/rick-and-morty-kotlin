<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:gravity="center"
        android:paddingRight="15dp"
        app:layout_constraintBottom_toTopOf="@+id/txtName"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="130dp" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="240dp"
        android:layout_height="20dp"
        android:textSize="15dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/txtId"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:layout_editor_absoluteX="85dp" />

    <TextView
        android:id="@+id/txtId"
        android:layout_width="240dp"
        android:layout_height="20dp"

        android:textSize="15dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/txtSpecies"
        app:layout_constraintTop_toBottomOf="@+id/txtName"
        tools:layout_editor_absoluteX="85dp" />

    <TextView
        android:id="@+id/txtSpecies"
        android:layout_width="240dp"
        android:layout_height="20dp"

        android:textSize="15dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/txtType"
        app:layout_constraintTop_toBottomOf="@+id/txtId"
        tools:layout_editor_absoluteX="85dp" />

    <TextView
        android:id="@+id/txtType"
        android:layout_width="240dp"
        android:layout_height="20dp"

        android:textSize="15dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/txtGender"
        app:layout_constraintTop_toBottomOf="@+id/txtSpecies"
        tools:layout_editor_absoluteX="85dp" />

    <TextView
        android:id="@+id/txtGender"
        android:layout_width="240dp"
        android:layout_height="20dp"

        android:textSize="15dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/txtStatus"
        app:layout_constraintTop_toBottomOf="@+id/txtType"
        tools:layout_editor_absoluteX="85dp" />

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="240dp"
        android:layout_height="20dp"

        android:textSize="15dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/txtGender"
        tools:layout_editor_absoluteX="85dp" />


</androidx.constraintlayout.widget.ConstraintLayout>